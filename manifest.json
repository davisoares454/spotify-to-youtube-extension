{
  "manifest_version": 3,
  "name": "Spotify to YouTube",
  "version": "1.0",
  "description": "Redirects from a spotify song to the first youtube video found for that title.",
  "permissions": [
    "webNavigation",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://www.youtube.com/results?search_query=*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/spotify-to-youtube-16.png",
      "24": "icons/spotify-to-youtube-24.png",
      "32": "icons/spotify-to-youtube-32.png",
      "48": "icons/spotify-to-youtube-48.png",
      "128": "icons/spotify-to-youtube-128.png",
      "256": "icons/spotify-to-youtube-256.png"
    }
  },
  "icons": {
    "16": "icons/spotify-to-youtube-16.png",
    "24": "icons/spotify-to-youtube-24.png",
    "32": "icons/spotify-to-youtube-32.png",
    "48": "icons/spotify-to-youtube-48.png",
    "128": "icons/spotify-to-youtube-128.png",
    "256": "icons/spotify-to-youtube-256.png"
  }
}
